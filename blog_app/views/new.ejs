<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        New Blog
    </div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" placeholder="title">
        </div>
         <div class="field">
             <label for="blog[image]">Blog image</label>
             <input type="text" name="blog[image]" placeholder="image">
        </div>
         <div class="field">
             <label for="blog[body]">Blog content here</label>
             <textarea name="blog[body]" placeholder="Write down your thoughts"></textarea>
        </div>
         <div class="field">
            <input type="submit" name="" class="ui teal big default button ">
        </div>
    </form>
</div>



