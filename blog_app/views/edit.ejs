<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        Edit <%= blog.title %>
    </div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
         <div class="field">
             <label for="blog[image]">Blog image</label>
             <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
         <div class="field">
             <label for="blog[body]">Blog content here</label>
             <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
         <div class="field">
            <input type="submit" name="" class="ui teal big default button ">
        </div>
    </form>
</div>







<% include partials/footer %>